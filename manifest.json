{
	"manifest_version": 2,
	"name": "Package Tracker",
	"description": "Track a shipment quickly",
	"version": "1.0.0",
	"icons": { "128": "package-tracker-logo-128px.png" },
	"browser_action": {
		"default_icon": "package-tracker-logo-128px.png",
		"default_popup": "popup.html"
	},
	"background": {
		"scripts": ["eventPage.js"],
		"persistent": false
	},

	"permissions": [ 
		"activeTab",
		"contextMenus",
		"storage",
		"clipboardWrite"
	]
}